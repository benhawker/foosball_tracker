<div class="col-sm-6 col-centered">
  <h2 class="text-center">Update user</h2>
  <%= form_for @user do |f| %>
    <%= f.label "First Name" %>
    <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
    <br>
    <%= f.label "Last Name" %>
    <%= f.text_field :last_name, placeholder: "Last name", class: "form-control" %>
    <br>
    <%= f.label "Username" %>
    <%= f.text_field :user_name, placeholder: "Username", class: "form-control" %>
    <br>
    <%= f.submit "Update user", class: "form-control btn btn-primary" %>
  <% end %>
</div>